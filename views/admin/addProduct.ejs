        <form action="/admin/product_add" method="post" enctype="multipart/form-data" >
            <section class="content-main">
                <div class="row">
                    <div class="col-9">
                        <div class="content-header">
                            <h2 class="content-title">Add New Product</h2>
                            <div>

                                <button type="submit" class="btn btn-md rounded font-sm hover-up">Submit</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Basic</h4>
                            </div>
                            <div class="card-body">

                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Product title</label>
                                    <input type="text" name="product_name" placeholder="Type here" class="form-control"
                                        id="product_name">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Full description</label>
                                    <textarea placeholder="Type here" name="description" class="form-control"
                                        rows="4"></textarea>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Regular price</label>
                                            <div class="row gx-2">
                                                <input placeholder="₹" required min="1" type="number" name="price"
                                                    class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Offer price</label>
                                            <div class="row gx-2"></div>
                                            <input placeholder="₹" min="1" required name="offer_price" type="number"
                                                class="form-control">
                                        </div>
                                    </div>

                                </div>



                            </div>
                        </div> <!-- card end// -->

                    </div>
                    <div class="col-lg-3">
                    
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Image</h4>
                            </div>
                            <div class="card-body">
                                <div class="input-upload">
                                    <img src="/evara-backend/assets/imgs/theme/upload.svg" alt="">
                                    <input class="form-control" name="productImages" required type="file" multiple>
                                </div>
                            </div>
                        </div> <!-- card end// -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Organization</h4>
                            </div>
                            <div class="card-body">
                                <div class="row gx-2">
                                    <h6>Category</h6>
                                    <div class="col-md-6">
                                        <label for="inputState" class="form-label"></label>
                                        <select id="inputState" class="form-select" onchange="selectCategory()">
                                            <option value="" selected>Choose Category</option>
                                            <% categories.forEach(category => { %>
                                                <option value="<%=category._id%>"><%=category.categoryName%></option> <% })%>
                                            
                                        </select>
                                        <input type="hidden" name="category" id="categoryId" value="" required>
                                    </div>

                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">In Stock</label>
                                        <input type="number" required min="0" name="in_stock" class="form-control">
                                    </div>
                                </div> <!-- row.// -->
                            </div>
                        </div> <!-- card end// -->
                    </div>
