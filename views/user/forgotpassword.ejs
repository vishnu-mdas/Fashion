    <!-- Vendor JS-->


    <script>
       function validateMobile() {
        let mobilenumber = document.getElementById('mobilenumber').value;
          const regExp = /^(?:(?:\+91)|(?:91)|0)?[6-9]\d{9}$/;
          if(!regExp.test(mobilenumber)){
                document.getElementById('mobileErr').innerHTML = "Mobile Number must be 10 digits long";
                return false;
            }else{
                document.getElementById('mobileErr').innerHTML="";
                return true;
       }
    }
    </script>
