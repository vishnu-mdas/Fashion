    <script>

          function validateMobile() {
          let mobilenumber = document.getElementById('mobilenumber').value;
          const regExp = /^(?:(?:\+91)|(?:91)|0)?[6-9]\d{9}$/;
          if(!regExp.test(mobilenumber)){
                document.getElementById('mobileErr').innerHTML = "Mobile Number must contain 10 numbers";
                return false;
            }else{
                document.getElementById('mobileErr').innerHTML="";
                return true;
            }
         }


        function validation(){
            const username=document.getElementById('username').value.trim()
            const mobileNumber=document.getElementById('mobilenumber').value.trim()
            const email=document.getElementById('email').value.trim()
            const password=document.getElementById('password').value.trim()
            const confirmPassword=document.getElementById('confirmPassword').value.trim()

            if(username=='' || mobileNumber=='' || email =='' || password=='' || confirmPassword==''){
                document.getElementById('err').innerHTML='Some fields are empty'
                return false
            }else{
                if(password!=confirmPassword){
                    document.getElementById('err').innerHTML='Passwords does not match'
                    return false
                }else{
                    return true
                }
            }

        }
        function validatePassword(){
            let password = document.getElementById('password').value;
            const regExp = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{8,}$/
            if(!regExp.test(password)){
                document.getElementById('passwordErr').innerHTML = "Password should contain minimum 6 letters with atleast one alphabet ,numeric values,and special characters";
                return false;
            }else{
                document.getElementById('passwordErr').innerHTML="";
                return true;
            }

        }
        
        function validateEmail(){
            let email = document.getElementById('email').value;
            const regExp = /^[\w-]+(\.[\w-]+)*@([\w-]+\.)+[a-zA-Z]{2,7}$/
            if(!regExp.test(email)){
                document.getElementById('emailErr').innerHTML = " Enter a proper email";
                return false;
            }
            else{
                document.getElementById('emailErr').innerHTML= "";
                 return true;
        }
        }
    </script>





